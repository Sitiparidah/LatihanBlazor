
<div class="col-4 mt-4" style="min-width: 20rem; max-width:30.5%;">
    <div class="align-center">
        <hr>
        <h3><p align="center" style="color: indigo;500">@Employee.EmployeeId</p></h3>
        <hr>
        <h3><p align="center" style="color: indigo;500">@Employee.FirstName @Employee.LastName</p></h3>    
    </div>
    <img class="rounded mx-auto d-block imageThumbnail" src="@Employee.PhotoPath" />
    <hr>
    @if (ShowFooter)
    {
        <div class="card-footer text-center">
            <a href="@($"employeedetails/{Employee.EmployeeId}")" class="btn btn-warning m-1" style="color: indigo;"> <b>DETAIL EMPLOYEE</b></a>
        </div>
    }
</div>
