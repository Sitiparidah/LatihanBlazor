<div class="col-4 mt-4" style="min-width: 18rem; max-width:30.5%">
    <div class="card-header">
        <hr>
        <h3><p align="center" style="color: indigo;500">@Employee.EmployeeId</p></h3>
        <hr>
        <h3><p align="center" style="color: indigo;500">@Employee.FirstName @Employee.LastName</p></h3>  
        <div class="card-footer text-center"></div>
        <hr>  
    </div>
    
    <h3> <div class="card-footer text-center"></div>
        <img  class="rounded mx-auto d-block imageThumbnail" src="@Employee.PhotoPath" /></h3>
    <hr>
    @if (ShowFooter)
    {
        <div class="card-footer text-center">
            <a href="@($"employeedetails/{Employee.EmployeeId}")" class="btn btn-outline-danger m-1" style="color: danger;"> <b>VIEW</b></a>
            <a  class="btn btn-outline-primary m-1" style="color: primary;"> <b>EDIT</b></a>
            <a  class="btn btn-outline-warning m-1" style="color: warning;"> <b>DELETE</b></a>
        </div>
    }
    </div>